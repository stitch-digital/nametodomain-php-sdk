{
    "name": "stitch-digital/nametodomain-php-sdk",
    "description": "An SDK to easily work with the Name To Domain API",
    "keywords": [
        "nametodomain",
        "domain",
        "api",
        "sdk"
    ],
    "homepage": "https://github.com/stitch-digital/nametodomain-php-sdk",
    "license": "MIT",
    "authors": [
        {
            "name": "John Trickett",
            "email": "john@stitch.digital",
            "homepage": "https://stitch.digital",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "saloonphp/pagination-plugin": "^2.2",
        "saloonphp/saloon": "^3.14"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "pestphp/pest": "^3.8.2",
        "phpstan/phpstan": "^2.1",
        "vlucas/phpdotenv": "^5.6.2"
    },
    "autoload": {
        "psr-4": {
            "NameToDomain\\PhpSdk\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NameToDomain\\PhpSdk\\Tests\\": "tests"
        }
    },
    "scripts": {
        "format": "vendor/bin/pint",
        "test": "vendor/bin/pest -p",
        "analyse": "vendor/bin/phpstan analyse",
        "baseline": "vendor/bin/phpstan analyse --generate-baseline"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "composer/package-versions-deprecated": true,
            "pestphp/pest-plugin": true
        }
    }
}
